.header
    background-color primaryBlack
.header__inner
    display flex
    padding 40px 0 18px 0px
.header__nav
    flex 2
    ul
        padding-top 3px
    li
        position: relative
        display inline-block
        &:not(:last-child)
            margin-right 52px
        &:hover
            &::after
                position absolute
                bottom -36px    
                display block
                width 100%
                height 32px
                background-color primaryCyan
                content ''
    a
        display inline-block
        font: 38px / 1 titleFont
        text-transform uppercase
        color #fff
.header__other
    padding-right 8px
    ul
        padding-top 4px
    li
        display inline-block
        &:not(:last-child)
            margin-right 34px
    a
        font-size 14px
        color primaryLightGrey
        &:hover
            color primaryCyan