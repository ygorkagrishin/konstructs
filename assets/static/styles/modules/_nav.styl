.nav
    ul
        display flex
        padding 1.1875rem 1.875rem 
        background-color primaryLightGrey
        /* 
            Отключим элемент позже разберемся, что следать
        */
        @media (orientation portrait) and (max-width 580px)
            display none 
        @media (orientation landscape) and (max-width 580px)
            display none
    li
        &:not(:last-child)
            margin-right 2.25rem
    a
        colorLink = #798184
        
        color colorLink
        &:hover
            color primaryBlack