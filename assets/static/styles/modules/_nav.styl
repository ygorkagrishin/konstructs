.nav
    ul
        display flex
        padding 1.1875rem 1.875rem 
        background-color primaryLightGrey
        @media (orientation portrait) and (max-width 580px), 
        (orientation landscape) and (max-width 680px)
            position fixed
            top 0
            left 0
            display flex
            z-index 999999
            flex-direction column
            justify-content center
            align-items center
            width 100%
            height 100%
            background-color primaryLightGrey
    li
        &:not(:last-child)
            margin-right 2.25rem
            @media (orientation portrait) and (max-width 580px),
            (orientation landscape) and (max-width 680px)
                margin-right 0
                margin-bottom 1.5rem
    a
        colorLink = #798184
        
        color colorLink
        &:hover
            color primaryBlack
    @media (orientation portrait) and (max-width 580px),
    (orientation landscape) and (max-width 680px)
        display none
        &.active
            display block
    .btn__menu_type_close
        display none
        @media (orientation portrait) and (max-width 580px),
        (orientation landscape) and (max-width 680px)
            display inline-block
.js-menu-active
    @media (orientation portrait) and (max-width 580px),
    (orientation landscape) and (max-width 680px)
        overflow hidden