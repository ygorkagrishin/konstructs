.footer
    background-color primaryBlack
.footer__row
    display: flex
    justify-content space-between
    padding 3.375rem 3.75rem 8.875rem 3.75rem
    @media (orientation portrait) and (max-width 1024px),
    (orientation landscape) and (max-width 800px)
        padding: 1.7rem 1rem 7rem 1rem
    @media (orientation landscape) and (max-width 680px),
    (orientation portrait) and (max-width 580px)
        flex-wrap wrap
    @media (orientation portrait) and (max-width 420px)
        padding 1.7rem 0 7rem 0
    @media (orientation landscape) and (max-width 480px),
    (orientation portrait) and (max-width 345px)
        flex-wrap wrap
    & > .footer__col:last-child
        @media (orientation landscape) and (max-width 680px),
        (orientation portrait) and (max-width 580px)
            max-width 100%
            padding-top 1.5rem
.footer__col 
    footerColorText = #737c85
    width 100%
    max-width (100%/3)
    @media (orientation landscape) and (max-width 680px)
        max-width 50%
    @media (orientation portrait) and (max-width 580px)
        max-width 50%
    @media (orientation landscape) and (max-width 480px),
    (orientation portrait) and (max-width 345px)
        max-width 100%
        text-align center    
    h6
        margin-bottom 1.5em
        font .875em / 1 footerTitleFont // 14px default
        color footerColorText
.footer__list
    footerColorText = #737c85
    
    li
        &:not(:last-child)
            margin-bottom .6875rem
    a
        font: .875em / 1 footerLinkFont // 14px default
        color footerColorText
        &:hover
            color #fff