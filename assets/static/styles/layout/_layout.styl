*
    box-sizing border-box
html
    @media screen and (max-width 1800px) 
        font-size 1rem // 16
    @media screen and (max-width 1024px)
        font-size .875rem // 14
    @media screen and (max-width 480px)
        font-size: .8125rem // 13
body 
    padding 0
    font: 1rem / 1.5rem baseFont
.container
    width 98%
    max-width 73.625rem
    margin 0 auto
for $n in (1...6)
    h{$n}
        margin: 0
        line-height 1
        color primaryBlack
ul, li
    margin 0
    padding 0
    list-style none
p
    margin 0
a
    text-decoration none
    color primaryBlack
img 
    display inline-block