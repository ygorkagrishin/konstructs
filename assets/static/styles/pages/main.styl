.wrap
    display flex
    border-right .0625rem solid borderColor
    border-left .0625rem solid borderColor
    border-top .0625rem solid borderColor
.news
    position relative
    max-width 61%
    padding-right 1.125rem
    border-right .0625rem solid borderColor
    @media screen and (orientation portrait) and (max-width 800px)
        padding-right 0
.sidebar
    position relative
    max-width 39%
.news__name
    display: inline-block
    padding .14814815em .5185185252em
    font 1.6875em / 1 titleFont
    text-transform uppercase
    color #fff
    background-color primaryCyan
.post
    &:not(:first-of-type)
        border-top .0625rem solid borderColor
.post__name
    font 1.375em / 1 titleFont
    color primaryCyan
.post__top
    padding 2.5rem 2.5rem .9375rem 2.5rem
    @media screen and (orientation portrait) and (max-width 1024px)
        padding 2.5rem 1rem .9375rem 1rem
.post__title
    margin: .28260870em 0
    font-size 2.875em
    a    
        font: 1em / .86956522em titleFont
        &:hover
            text-decoration underline
.post__pic
    height 15.9375rem
    overflow hidden
    img 
        width 100%
.post__cont
    textColor = #798184

    /* 
        Да это не ошибка, используем em так как возможно будем менять размер шрифта в блоке
     */
    padding 1.25em 2.5em 3.125em 2.5em
    color textColor
    @media screen and (orientation portrait) and (max-width 1024px)
        padding 1em 1em 2.5em 1em
    p
        &:not(:last-child)
            margin-bottom 1.5em
            @media screen and (orientation portrait) and (max-width 1024px)
                margin-bottom 1em

.feat
    min-height 38.5rem
    background primaryGrey url('images/content/feature/Using-the-Form-1.png') no-repeat center / cover
.feat__name 
    display inline-block
    padding .14814815em .5185185252em
    font 1.6875em / 1 titleFont
    text-transform uppercase
    color #fff 
    background-color primaryBlack
.feat__top
    padding 4.25rem 3.75rem
.feat__title
    max-width: 9.42857143em
    padding .25714286em 0
    font-size 4.375em // 70px
    a
        font 1em / .91428571em tungstennarrow-medium,sans-serif,arial
        letter-spacing .04285714em
        color #fff
        &:hover
            text-decoration underline