.wrap
    display flex
.news
    position relative
    flex 2
.aside
    position relative
    flex 1
.news__name
    display: inline-block
    padding 10px 14px
    font 24px / 1 titleFont
    text-transform uppercase
    color #fff
    background-color primaryCyan
.post__name
    font 22px / 1 titleFont
    color primaryCyan
.post__top
    padding 45px 40px 34px 40px 
.post__title
    margin: 24px 0 34px 0
    font: 40px / 1 titleFont 
    color primaryBlack
.post__pic
    height 255px
    overflow hidden
.post__cont
    textColor = #798184

    padding 26px 40px 55px 40px
    color textColor
    p
        &:not(:last-child)
            margin-bottom 38px